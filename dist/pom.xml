        </dependency>

        <!-- 1_17_R0 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_17_R0</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_17_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_17_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

    </dependencies>

    <build>
        <directory>../target</directory>
        <finalName>DamageIndicator</finalName>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/../core/src/main/resources/</directory>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <!-- Combine all dependencies into 1 jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <artifactSet>
                                <includes>
                                    <include>com.zenya.damageindicator:*</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>