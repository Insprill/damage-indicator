        </dependency>

        <!-- 1_9_R2 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_9_R2</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_10_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_10_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_11_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_11_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_12_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_12_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_13_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_13_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_13_R2 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_13_R2</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_14_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_14_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_15_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_15_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_16_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_16_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_16_R2 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_16_R2</artifactId>
