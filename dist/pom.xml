            <artifactId>fallback</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_8_R1 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_8_R1</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_8_R2 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_8_R2</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 1_8_R3 protocol implementation -->
        <dependency>
            <groupId>com.zenya.damageindicator</groupId>
            <artifactId>1_8_R3</artifactId>
